<!DOCTYPE html>
<html>
<head>
  <title>Listing Details</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    /* Two-column responsive layout for the listing view */
    .listing-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-bottom: 20px;
    }
    .listing-info {
      flex: 1;
      /* Ensure a minimum width so that on larger screens it stays side by side */
      min-width: 250px;
    }
    .listing-image {
      flex: 0 0 250px;
      display: flex;
      flex-direction: column;
      align-items: left;
    }
    .attachment-img {
      width: 250px;
      height: 250px;
      object-fit: contain;
      margin: 10px 0;
    }
    /* Actions container styling */
    .actions {
      margin-top: 20px;
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
    }

    /* Responsive adjustments */
    @media (max-width: 600px) {
      .listing-container {
        flex-direction: column;
      }
      .listing-info, .listing-image {
        flex: 1 100%;
      }
      .listing-image {
        margin-top: 20px;
        align-items: left;
      }
      .attachment-img {
        width: 100%;
        max-width: 250px;
        height: auto;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Listing Details</h1>
    
    <div class="listing-container">
      <!-- Left Column: Listing Information -->
      <div class="listing-info">
        <div class="listing-field">
          <label>Listing ID:</label>
          <span><%= id %></span>
        </div>
        <div class="listing-field">
          <label>Name:</label>
          <span><%= listing.name %></span>
        </div>
        <div class="listing-field">
          <label>Status:</label>
          <span><%= listing.status %></span>
        </div>
        <div class="listing-field">
          <label>Notes:</label><br>
          <p><span><%= listing.notes %></span></p>
        </div>
      </div>
      
      <!-- Right Column: Listing Attachment -->
      <div class="listing-image">
        <label>Attachments:</label>
        <img src="<%= listing.attachments %>" alt="<%= listing.name %>" class="attachment-img">
      </div>
    </div>
    
    <!-- Actions / Additional Links -->
    <div class="actions">
     <a href="/listings/new" class="btn btn-primary">Create New Listing</a>
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      <a href="/listings/edit/<%= id %>" class="btn btn-edit">Edit Listing</a>
      <a href="/listings/delete/<%= id %>" class="btn btn-delete">Delete Listing</a>
      <a href="/settings" class="btn btn-secondary">Account Settings</a>
    </div>
  </div>
</body>
</html>
